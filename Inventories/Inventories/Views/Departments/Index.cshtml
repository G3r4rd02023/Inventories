@model IEnumerable<Inventories.Models.Department>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",new { } , new { @class = "btn btn-primary"})
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.DepartmentID }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Details", "Details", new { id=item.DepartmentID },new { @class = "btn btn-success"}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DepartmentID }, new { @class = "btn btn-warning" })
        </td>
    </tr>
}

</table>
