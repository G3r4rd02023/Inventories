@model Inventories.Models.Product

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>



<div class="row">
    <div class="col-md-6">
        <div>
            <h4>Product</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Category.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Category.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Company.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Company.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Tax.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Tax.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Code)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Code)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Image)
                </dt>

                <dd>
                    <img width="100" src="@Url.Action("GetImage","Products",new {id=Model.ProductID})" />
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Remarks)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Remarks)
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Back to List", "Index", new { }, new { @class = " btn btn-primary" })
        </p>
    </div>
    <div class="col-md-6">
        <h4>Inventory</h4>
        <hr />
        @if (Model.Inventories.Count == 0)
        {
            <h5>No tiene registros </h5>
        }
        else
        {
    <table class="table table-striped">
        <tr>
            <th>
                Bodega
            </th>
            <th>
                Stock
            </th>
        </tr>

        @foreach (var item in Model.Inventories.ToList())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Warehouse.Name)
                </td>
                <td align="right">
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
            </tr>
        }
        <tr>
            <td>
                <strong>Total</strong>
            </td>
            <td align="right">
                <strong>@Html.DisplayFor(model => model.Stock)</strong>
            </td>
        </tr>
    </table>

        }
    </div>
   
</div>
