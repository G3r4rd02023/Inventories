@model IEnumerable<Inventories.Models.Category>

@{
    ViewBag.Title = "Index";
}


<h2>Categoria</h2>

<p>
    @Html.ActionLink("Create New", "Create",new { }, new {@class="btn btn-primary" })
</p>




<table class="table table-striped">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryID },new {@class = "btn btn-success" }) |
                @Html.ActionLink("Details", "Details", new { id = item.CategoryID }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-warning" })
            </td>
        </tr>
    }

</table>
